<!--             android:layout_height="wrap_content" -->
<!--             android:ems="10" -->
<!--             android:background="@drawable/edit_text" -->
<!--             android:inputType="textEmailAddress" /> -->

        <TextView
            android:id="@+id/textViewSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewSenha"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/edit_text"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textViewConfirmarSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewConfirmarSenha"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/editTextConfirmarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/edit_text"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5pt" >

            <Button
                android:id="@+id/buttonCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/botao"
                android:text="@string/buttonCancelar"
                android:onClick="onClickCancelar"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/buttonNovoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/botao"
                android:text="@string/buttonContinuar"
                android:onClick="onClickContinuar"
                android:layout_margin="5dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
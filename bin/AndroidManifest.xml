<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.view.garcom"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cliente.view.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.cliente.view.CadastroActivity"
            android:label="@string/title_activity_cadastro"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.cliente.view.MenuActivity"
            android:label="@string/title_activity_menu"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.cliente.view.CardapioActivity"
            android:label="@string/title_activity_cardapio" >
        </activity>
        <activity
            android:name="com.cliente.view.SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cliente.view.AlterarDadosActivity"
            android:label="@string/title_activity_alterar_dados"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.cliente.view.DetalhesProdutoActivity"
            android:label="@string/title_activity_detalhes_produto"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.cliente.view.PromocoesActivity"
            android:label="@string/title_activity_promocoes" >
        </activity>
        <activity
            android:name="com.cliente.view.QuemSomosActivity"
            android:label="@string/title_activity_quem_somos" >
        </activity>
        <activity
            android:name="com.cliente.view.SelecionarMesaActivity"
            android:label="@string/title_activity_selecionar_mesa" >
        </activity>
    </application>

</manifest>